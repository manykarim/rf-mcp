{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "anthropic/claude-sonnet-4-5",
  "autoupdate": true,
  "provider": {
    "openrouter": {
      "models": {
        "meta-llama/llama-4-scout": {
          "name": "Llama 4 Scout",
          "attachment": true,
          "reasoning": false,
          "tool_call": true,
          "temperature": true,
          "release_date": "2025-04-05",
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "cost": {
            "input": 0.08,
            "output": 0.3
          },
          "limit": {
            "context": 512000,
            "output": 8192
          }
        }
      }
    }
  },
  "mcp": {
    "robotmcp": {
      "type": "local",
      "command": ["uv", "run", "--inexact", "-m", "robotmcp.server"],
      "enabled": true
    }
  }
}
